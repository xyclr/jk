<script type="text/javascript">
  $(function(){
    // 焦点图 flexslider插件
    TouchSlide({
      slideCell:"#focus",
      titCell:".hd ul", 	//开启自动分页 autoPage:true ，此时设置 titCell 为导航元素包裹层
      mainCell:".bd ul",
      effect:"leftLoop",
      autoPlay:true,		//自动播放
      autoPage:true, 		//自动分页
      switchLoad:"_src", 	//切换加载，真实图片路径为"_src"
      interTime:5000,
      delayTime:300
    });
  });
</script>
